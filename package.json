    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "nuxt": "^3.5.2",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.8",
